# Configuration des Variables d'Environnement
# Copier ce fichier vers .env.local pour le développement

# ================================
# ENVIRONNEMENT
# ================================
FLASK_ENV=development
DEBUG=True

# ================================
# BASE DE DONNÉES
# ================================
# Pour développement local (SQLite)
DATABASE_URL=sqlite:///profcalendar_dev.db

# Pour développement avec PostgreSQL local
# DATABASE_URL=postgresql://username:password@localhost:5432/profcalendar_dev

# ================================
# SÉCURITÉ
# ================================
# Générer une nouvelle clé secrète avec: python3 -c "import secrets; print(secrets.token_hex(32))"
# ⚠️ OBLIGATOIRE EN PRODUCTION - Ne jamais commiter la vraie clé!
SECRET_KEY=dev-secret-key-change-in-production

# Clé de chiffrement des données sensibles (Fernet)
# Générer avec: python scripts/generate_encryption_key.py
# ⚠️ OBLIGATOIRE EN PRODUCTION - Ne jamais commiter la vraie clé!
# ⚠️ Conservez une sauvegarde sécurisée - clé perdue = données irrécupérables
ENCRYPTION_KEY=

# Cookies sécurisés (géré automatiquement selon FLASK_ENV)
# En production (FLASK_ENV=production), SESSION_COOKIE_SECURE sera automatiquement True

# ================================
# UPLOAD DE FICHIERS
# ================================
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads

# ================================
# PDF VIEWER
# ================================
PDF_CACHE_SIZE=100
PDF_MAX_PAGES=50

# ================================
# DÉVELOPPEMENT UNIQUEMENT
# ================================
# Activer les outils de debug
FLASK_DEBUG_TB_ENABLED=True

# Désactiver le cache pour le développement
TEMPLATES_AUTO_RELOAD=True
SEND_FILE_MAX_AGE_DEFAULT=0

# ================================
# LOGS
# ================================
LOG_LEVEL=DEBUG
LOG_FILE=logs/profcalendar_dev.log